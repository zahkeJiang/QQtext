<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGround"
    >
    <include layout="@layout/common_navigation_back_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_marginBottom="8dp"
        >
        <ImageButton
            android:padding="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/colorWhite"
            android:src="@mipmap/flight_ic_pay_alipay"
            android:scaleType="centerInside"
            />
        <TextView
            android:text="支付宝支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/colorBlackText"
            />
        <ImageButton
            android:id="@+id/pay_zhifubao_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/colorWhite"
            android:src="@mipmap/right_arrow"
            android:scaleType="centerInside"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_marginBottom="8dp"
        >
        <ImageButton
            android:padding="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/colorWhite"
            android:src="@mipmap/flight_ic_pay_weixin"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/buy_name"
            android:text="微信支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/colorBlackText"
            />
        <ImageButton
            android:background="@color/colorWhite"
            android:id="@+id/pay_weixin_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/right_arrow"
            android:scaleType="centerInside"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_marginBottom="16dp"
        >
        <ImageButton
            android:background="@color/colorWhite"
            android:layout_width="48dp"
            android:padding="8dp"
            android:layout_height="48dp"
            android:src="@mipmap/flight_ic_pay_bank_card"
            android:scaleType="centerInside"
            />
        <TextView
            android:text="银行卡支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/colorBlackText"
            />
        <ImageButton
            android:id="@+id/pay_yinghangka_btn"
            android:background="@color/colorWhite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/right_arrow"
            android:scaleType="centerInside"
            />
    </LinearLayout>
</LinearLayout>